{
  "name": "notification",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "replaceOnPUT": true
  },
  "hidden": [],
  "mixins": {
    "Common": {}
  },
  "properties": {
    "serviceName": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "userChannelId": {
      "type": "string"
    },
    "message": {
      "type": "object",
      "required": true,
      "default": {}
    },
    "created": {
      "type": "date",
      "default": "$now"
    },
    "channel": {
      "type": "string",
      "required": true,
      "default": "inApp"
    },
    "isBroadcast": {
      "type": "boolean",
      "default": false
    },
    "validTill": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "prototype.deleteItemById": {
      "accepts": [
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "description": "delete a notification by Id",
      "http": [
        {
          "path": "/",
          "verb": "delete"
        }
      ]
    }
  }
}
